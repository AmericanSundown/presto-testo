<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="#xslt"?>
<!DOCTYPE xsl:stylesheet [<!ATTLIST xsl:stylesheet id ID #IMPLIED>]>
<xsl:stylesheet id="xslt" xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0" xml:lang="en">
<xsl:template match="xsl:stylesheet">
<xsl:call-template name="result">
<xsl:with-param name="param" select="1234567890"/>
</xsl:call-template>
</xsl:template>
<xsl:template name="result">
<xsl:param name="param">FAIL</xsl:param>
<xsl:if test="$param = 890"><result><xsl:value-of select="'PASS'"/></result></xsl:if>
<xsl:if test="string-length($param) > 3">
<xsl:call-template name="result">
<xsl:with-param name="param" select="substring($param,2)"/>
</xsl:call-template>
</xsl:if>
</xsl:template>
</xsl:stylesheet>